<%= render "devise/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="columns mt-6 is-centered">
<div class="column is-one-quarter"
<form class="box">
  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", type:"email" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"input", type:"password" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Confirm Password</label>
    <div class="control">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input", type:"password" %>
    </div>
  </div>

  <%= link_to "Sign up",  f.submit, class:"button is-primary"  %>
</form>
</div>
</div>
<% end %>
