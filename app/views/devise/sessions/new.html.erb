<%= render "devise/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="columns mt-6 is-centered">
<div class="column is-one-quarter"
<form class="box">
  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", type:"email" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <%= f.password_field :password, class:"input", type:"password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field ">
      <%= f.check_box :remember_me , type:"checkbox"%>
      <%= f.label :remember_me %>
  </div>
  <% end %>

  </br>

  <%= link_to "Log in",  f.submit, class:"button is-primary"  %>
</form>
</div>
</div>
<% end %>

